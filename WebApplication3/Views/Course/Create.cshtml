@model WebApplication3.ViewModels.CourseViewModel
@{
    ViewData["Title"] = "Add Course";
}

<h2>Add Course</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Course Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TeacherId">Teacher</label>
        <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.Teachers" required>
            <option value="">-- Select Teacher --</option>
        </select>
        <span asp-validation-for="TeacherId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>