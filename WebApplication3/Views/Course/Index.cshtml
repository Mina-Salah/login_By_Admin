@model IEnumerable<WebApplication3.ViewModels.CourseViewModel>

@{
    ViewData["Title"] = "Courses List";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Teacher</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.TeacherName</td> <!-- This should be replaced with the teacher's name later -->
                <td>
                    <a href="@Url.Action("Edit", new { id = course.Id })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", new { id = course.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create")" class="btn btn-success">Create New Course</a>
