@model IEnumerable<WebApplication3.ViewModels.CourseViewModel>

@{
    ViewData["Title"] = "Courses";
}

<h2>Courses</h2>

@if (User.IsInRole("Admin"))
{
    <a asp-action="Create" class="btn btn-primary mb-3">Add New Course</a>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Teacher</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.TeacherName</td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-warning btn-sm">Edit</a>
                        <form asp-action="Delete" asp-route-id="@course.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this course?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
