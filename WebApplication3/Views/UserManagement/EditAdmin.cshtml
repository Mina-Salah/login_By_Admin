@model WebApplication3.Models.User

@{
    ViewData["Title"] = "Edit Admin";
}

<h2>Edit Admin Permissions</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<form asp-action="UpdateAdminPermissions" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" value="@Model.Email" readonly />
    </div>

    <div class="form-group">
        <label>Permissions (comma separated)</label>
        <input type="text" name="permissions" class="form-control" value="@Model.Permissions" />
    </div>

    <button type="submit" class="btn btn-primary">Update Permissions</button>
    <a asp-action="AdminsList" class="btn btn-secondary">Back to List</a>
</form>
