@model IEnumerable<WebApplication3.ViewModels.TeacherViewModel>

@{
    ViewData["Title"] = "Deleted Teachers";
}

<div class="container mt-4">
    <h2 class="text-danger">@ViewData["Title"]</h2>

    <table class="table table-hover table-bordered shadow-sm mt-3">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>@teacher.Name</td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            <form asp-action="Restore" asp-route-id="@teacher.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-secondary btn-sm">
                                    <i class="bi bi-arrow-clockwise"></i> Restore
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index" class="btn btn-outline-primary mt-3">
        <i class="bi bi-arrow-left"></i> Back to Active Teachers
    </a>
</div>
