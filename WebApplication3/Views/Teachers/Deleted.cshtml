@model IEnumerable<WebApplication3.ViewModels.TeacherViewModel>

@{
    ViewData["Title"] = "Deleted Teachers";
}

<div class="container mt-4">
    <h2 class="text-danger">@ViewData["Title"]</h2>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>@teacher.Name</td>
                    <td>
                        <form asp-action="Restore" asp-route-id="@teacher.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to restore this teacher?');">
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="bi bi-arrow-clockwise"></i> Restore
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index" class="btn btn-secondary">Back to Teacher List</a>
</div>
