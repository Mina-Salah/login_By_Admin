@model IEnumerable<WebApplication3.ViewModels.StudentViewModel>

@{
    ViewData["Title"] = "Students List";
}

<h2>Students</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Student</a>
    </p>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Teacher Name</th>
            <th>Course Name</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.TeacherName</td>
                <td>@item.courseName</td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
