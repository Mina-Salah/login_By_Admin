@model WebApplication3.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "Edit Student";
}

<h2>Edit Student</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TeacherId" class="control-label">Teacher</label>
        <select asp-for="TeacherId" asp-items="Model.Teachers" class="form-control">
            <option value="">-- Select Teacher --</option>
        </select>
        <span asp-validation-for="TeacherId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseIds" class="control-label">Courses</label>
        <select asp-for="CourseIds" asp-items="Model.Courses" class="form-control" multiple>
            <option value="">-- Select Courses --</option>
        </select>
        <span asp-validation-for="CourseIds" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
