@{
    ViewData["Title"] = "Welcome";
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - School Management System</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <!-- Custom CSS -->
    <style>
        body {
            background: linear-gradient(135deg, #A8DADC, #F1FAEE); /* Gradient from light blue to light gray */
            font-family: 'Arial', sans-serif;
            margin: 0;
            height: 100vh;
        }

        /* Welcome Card Styling */
        .welcome-card {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            width: 100%;
            text-align: center;
            margin-top: 50px; /* Adjusted margin to ensure no overlap */
        }

            .welcome-card h2 {
                color: #457B9D; /* Soft blue color */
                font-size: 2.5rem;
                font-weight: bold;
                margin-bottom: 20px;
            }

            .welcome-card p {
                font-size: 1.2rem;
                color: #333;
                margin-bottom: 20px;
            }

            .welcome-card .btn-primary {
                background-color: #A8DADC; /* Soft light blue */
                border-color: #A8DADC;
            }

        .btn-primary:hover {
            background-color: #457B9D; /* Soft blue hover effect */
            border-color: #457B9D;
        }

        /* Ensure content stays centered */
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 80vh; /* Ensure enough space for the card */
        }
    </style>
</head>
<body>

    <!-- Welcome Card -->
    <div class="container">
        <div class="card welcome-card mx-auto">
            <i class="bi bi-person-circle" style="font-size: 4rem; color: #457B9D;"></i>
            <h2>Welcome, @ViewBag.Username</h2>
            <p>You have logged in successfully!</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">
                <i class="bi bi-house-door-fill"></i> Go to Dashboard
            </a>
        </div>
    </div>

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
