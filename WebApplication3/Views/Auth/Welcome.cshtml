@{
    ViewData["Title"] = "Welcome";
   
}

@section Styles {
    <style>
        .welcome-card {
            background: #ffffff;
            padding: 30px;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
            max-width: 500px;
            width: 100%;
            text-align: center;
            margin-top: 50px;
        }

            .welcome-card h2 {
                color: #1e3c72;
                font-size: 2.5rem;
                font-weight: bold;
                margin-bottom: 20px;
            }

            .welcome-card p {
                font-size: 1.2rem;
                color: #444444;
                margin-bottom: 20px;
            }

            .welcome-card .btn-primary {
                background-color: #2a5298;
                border-color: #2a5298;
            }

        .btn-primary:hover {
            background-color: #1e3c72;
            border-color: #1e3c72;
        }

        i.bi-person-circle {
            font-size: 4rem;
            color: #1e3c72;
            margin-bottom: 15px;
        }

        .center-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 70vh;
        }
    </style>
}

<div class="center-container">
    <div class="card welcome-card mx-auto">
        <i class="bi bi-person-circle"></i>
        <h2>Welcome, @User.Identity.Name</h2>
        <p>You have logged in successfully!</p>
        <a href="@Url.Action("Index", "Teachers")" class="btn btn-primary mt-3">
            <i class="bi bi-house-door-fill"></i> Go to Dashboard
        </a>
    </div>
</div>
